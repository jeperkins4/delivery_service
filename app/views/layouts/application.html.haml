!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
      %title= content_for?(:title) ? yield(:title) : 'Aca'
      %meta{:charset => 'utf-8'}
      %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
      %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Aca'}"}
      /[if lt IE 9]
        = javascript_include_tag "html5shiv"
        = javascript_include_tag "html5shiv-printshiv"
        = javascript_include_tag "respond"
      = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
      = javascript_include_tag 'application', 'data-turbolinks-track' => true
      = csrf_meta_tags
      = action_cable_meta_tag
      %script{src: 'https://cdn.firebase.com/js/client/2.4.0/firebase.js'}
  %body
    .container
      %header
        = render 'layouts/navigation'
      %main{:role => "main"}
        = render 'layouts/messages'
        = yield
