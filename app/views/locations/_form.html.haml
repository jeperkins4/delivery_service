= simple_form_for(location) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :description
    = f.input :street
    = f.input :city
    = f.input :state
    = f.input :country
    = f.input :postal_code
    = f.input :latitude
    = f.input :longitude

  .form-actions
    = f.button :submit
